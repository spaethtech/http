{
    "name": "mvqn/http",
    "description": "Some common HTTP libraries.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ryan Spaeth",
            "email": "rspaeth@mvqn.net"
        }
    ],
    "require": {
        "php": "~7.3",

        "ext-json": "*",

        "mvqn/common": "dev-master",

        "slim/slim": "~4",
        "twig/twig": "~3",
        "slim/twig-view": "~3"
    },
    "require-dev": {
        "phpunit/phpunit": "~9",
        "vlucas/phpdotenv": "~2.5",
        "guzzlehttp/guzzle": "^6.3"
    },
    "autoload": {
        "psr-4": {
            "MVQN\\HTTP\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MVQN\\HTTP\\": "./tests/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
